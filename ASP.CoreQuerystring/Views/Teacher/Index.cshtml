@model IEnumerable<Techer>

<h2>Teacher List</h2>
<table class="table">
    <thead>
        <tr>
            <th>Teacher Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Techer in Model)
        {
            <tr>
                <td>@Techer.Name</td>
                <td>
                    <form asp-controller="Student" asp-action="ListByTeacher" method="post">
                        <input type="hidden" name="teacherId" value="@Techer.Id" />
                        <button type="submit" class="btn btn-primary">View Students</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>